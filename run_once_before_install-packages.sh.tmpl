#!/bin/bash
set -e

echo "Installing system packages..."

{{- if eq .chezmoi.os "darwin" }}
# macOS: Install Homebrew if needed
if ! command -v brew &> /dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    
    if [[ $(uname -m) == "arm64" ]]; then
        eval "$(/opt/homebrew/bin/brew shellenv)"
    fi
fi

echo "Installing Homebrew packages..."
set +e
brew bundle --no-upgrade --file="{{ .chezmoi.sourceDir }}/Brewfile" || true
{{- if stat (joinPath .chezmoi.sourceDir "Brewfile.darwin") }}
brew bundle --no-upgrade --file="{{ .chezmoi.sourceDir }}/Brewfile.darwin" || true
{{- end }}
set -e

{{- else if eq .chezmoi.os "linux" }}
# Linux: Install Homebrew if needed
if ! command -v brew &> /dev/null; then
    echo "Installing Homebrew..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
    eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
fi

echo "Installing Homebrew packages..."
set +e
brew bundle --no-upgrade --file="{{ .chezmoi.sourceDir }}/Brewfile" || true
{{- if stat (joinPath .chezmoi.sourceDir "Brewfile.linux") }}
brew bundle --no-upgrade --file="{{ .chezmoi.sourceDir }}/Brewfile.linux" || true
{{- end }}
set -e
{{- end }}

echo "Package installation complete!"
